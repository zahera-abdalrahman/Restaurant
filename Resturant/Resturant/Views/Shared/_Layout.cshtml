@model Resturant.ViewModels.HomeModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="robots" content="noindex, follow" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.png">

    <!-- all css here -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/icons.css">
    <link rel="stylesheet" href="~/assets/css/plugins.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link rel="stylesheet" href="~/assets/css/responsive.css">
    <script src="~/assets/js/vendor/modernizr-3.11.7.min.js"></script>
</head>
<body>
    <header class="header-area transparent-bar header-position">
        <div class="container">
            <div class="row">
                @if (Model.SystemSetting != null)
                {
                    <div class="col-lg-3 col-md-4 col-5 col-sm-4">
                        <div class="logo">
                            <a href="@Model.SystemSetting.SystemSettingWelcomeNoteUrl">
                                <img class="logo-normal" alt="" src="~/images/SystemSitting/@Model.SystemSetting.SystemSettingLogoImageUrl">
                                <img class="logo-sticky" alt="" src="~/images/SystemSitting/@Model.SystemSetting.SystemSettingLogoImageUrl2">
                            </a>
                        </div>
                    </div>
                }
                 @if (Model.MasterMenuList.Count != 0)
                {
                    <div class="col-lg-9 col-md-8 col-7 col-sm-8 relative">
                        <div class="menu-search-bundle">
                            <div class="main-menu">
                                <nav>
                                    <ul>
                                        @foreach (var item in Model.MasterMenuList)
                                        {
                                            <li class="top-hover">
                                                <a href="@item.MasterMenuUrl">@item.MasterMenuName</a>
                                            </li>

                                        }
                                    </ul>
                                </nav>
                            </div>                        
                        </div>
                    </div>
                    <div class="mobile-menu-area d-md-block d-block col-md-12 col-lg-12 col-12 d-lg-none d-xl-none">
                        <div class="mobile-menu">
                            <nav id="mobile-menu-active">
                                <ul class="menu-overflow">
                                    @foreach (var item in Model.MasterMenuList)
                                    {
                                        <li>
                                            <a href="@item.MasterMenuUrl">@item.MasterMenuName</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </div>
                    </div>
                }
            </div>
        </div>
    </header>
        @RenderBody()
    <footer class="footer-area">
        <div class="footer-area-top black-bg pt-95 pb-60">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                        <div class="footer-widget mb-40">
                            <div class="footer-title mb-30">
                                <h4>About Us</h4>
                            </div>
                            <div class="footer-about">
                                <p> Lorem ipsum dolor sit amet, consecte adipisicing elit, sed do tempor eget loved dost venenatis.</p>
                                <div class="footer-map">
                                    <a asp-action="ContactUs" asp-controller="Home"><i class="ion-ios-location-outline"></i> View on map</a>
                                </div>
                            </div>
                            <div class="social-icon">
                                <ul>
                                    @foreach (var item in Model.MasterSocialMediumList)
                                    {
                                        <li><a class="@item.MasterSocialMediumName" href="@item.MasterSocialMediumUrl"><i class="@item.MasterSocialMediumImageUrl"></i></a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                        <div class="footer-widget mb-40">
                            <div class="footer-title mb-30">
                                <h4>contact Us</h4>
                            </div>
                            <div class="footer-cont-info">
                                @* <div class="single-footer-cont-info">
                                <div class="cont-info-icon">
                                <i class="fa fa-home"></i>
                                </div>
                                <div class="cont-info-content">
                                <p>Elizabeth Tower. 6th Floor Medtown, New York</p>
                                </div>
                                </div>*@


                                @foreach (var item in Model.MasterContactUsInformationList)
                                {
                                    <div class="single-footer-cont-info">
                                        <div class="cont-info-icon">
                                            <i class="@item.MasterContactUsInformationImageUrl"></i>
                                        </div>

                                        <div class="cont-info-content">
                                            <p>@item.MasterContactUsInformationIdesc</p>
                                        </div>

                                    </div>

                                }

                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                        <div class="footer-widget mb-40">
                            <div class="footer-title mb-30">
                                <h4>Opening Time</h4>
                            </div>
                            <div class="open-time pr-30">
                                <ul>
                                    @foreach (var item in Model.MasterWorkingHourList)
                                    {
                                        <li>
                                            @item.MasterWorkingHourIdName
                                            <span>@item.MasterWorkingHourIdTimeFormTo</span>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                        <div class="footer-widget mb-40">
                            <div class="footer-title mb-30">
                                <h4>Newsletter</h4>
                            </div>
                            <div class="newsletter-style">
                                <p> Lorem ipsum dolor sit amet, consecte adipisicing elit, sed do.</p>
                                <div id="mc_embed_signup" class="subscribe-form ">
                                    <form asp-action="Newsletter">
                                        <div class="mc-form">
                                            <input class="email" asp-for="@Model.TransactionNewsletter.TransactionNewsletterEmail" required="" placeholder="Enter your email">
                                            <div class="clear">
                                                <input class="button" type="submit" name="subscribe" value="Subscribe">
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-bottom black-bg-2 pb-25 pt-25">
            <div class="container">
                <div class="copyright text-center">
                    <p>Copyright © <a href="#">Basmoti</a>. All Right Reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- all js here -->
    <script src="~/assets/js/vendor/jquery-v1.12.4.min.js"></script>
    <script src="~/assets/js/popper.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/ajax-mail.js"></script>
    <script src="~/assets/js/plugins.js"></script>
    <script src="~/assets/js/main.js"></script>
</body>
</html>
