@model Resturant.ViewModels.HomeModel
@{
    ViewData["Title"] = "Home";
}
@if (Model.MasterSliderList.Count != 0)
{
    <div class="slider-area">
        <div class="slider-active owl-dot-style owl-carousel">
            <!--MAster Slider-->
            @foreach (var item in Model.MasterSliderList)
            {
                <div class="single-slider bg-img height-100vh d-flex align-items-center justify-content-center" style="background-image:url(/images/@item.MasterSliderUrl);">
                    <div class="slider-content pt-100">
                        <div class="slider-content-wrap slider-animated-1">


                            <!--Breef-->
                            <h2 class="animated">@item.MasterSliderBreef</h2>
                            <!--Title-->
                            <h1 class="animated">@item.MasterSliderTitle</h1>
                            <!--Desc-->
                            <p>@item.MasterSliderDesc</p>
                            <div class="slider-btn mt-20">
                                <!--URL-->
                                @*<a class="animated" href="/Home/ProductDetails">read more</a>*@
                            </div>


                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
@if (Model.MasterAbout != null)
{
    <div class="about-area ptb-95">
        <div class="container">
            <div class="row d-flex align-items-center">

                <!--System setting-->



                <div class="col-lg-6">
                    <div class="about-content pr-30">

                        <h2>@Model.MasterAbout.MasterAboutTitle</h2>
                        <h3>@Model.MasterAbout.MasterAboutBrief</h3>
                        <div class="about-peragraph">
                            <p>@Model.MasterAbout.MasterAboutDesc</p>
                            <div class="default-btn-style mt-35">
                                <a href="@Model.MasterAbout.MasterAboutUrl">read more</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="about-img">
                        <img alt="" src="~/images/@Model.MasterAbout.MasterAboutImageUrl">
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@if (Model.LastFiveMasterItemMenu.Count != 0)
{
    <div class="popular-product gray-bg pt-100 pb-100">

        <div class="container">

            <div class="section-title text-center mb-50">
                <h2>Our Popular Dishes</h2>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim nostrud exercitation ullamco laboris nisi.</p>
            </div>

            <div class="product-slider-active owl-carousel">
                @foreach (var item in Model.LastFiveMasterItemMenu)
                {
                    <div class="product-style-wrap">
                        <img alt="" src="~/images/@item.MasterItemMenuImageUrl">
                        <div class="product-content text-center">
                            <h4>
                                @item.MasterItemMenuTitle
                            </h4>
                            <p>@item.MasterItemMenuBreef</p>
                            <span>@item.MasterItemMenuPrice JOD</span>
                        </div>
                    </div>
                }
            </div>



        </div>
        @if (Model.SystemSetting != null && !string.IsNullOrEmpty(Model.SystemSetting.SystemSettingWelcomeNoteImageUrl4))
        {
            <div class="popular-bg-img">
                <img alt="" src="~/images/SystemSitting/@Model.SystemSetting.SystemSettingWelcomeNoteImageUrl4">
            </div>
        }
    </div>
}

@if (Model.SystemSetting != null && !string.IsNullOrEmpty(Model.SystemSetting.SystemSettingWelcomeNoteImageUrl3))
{
    <style>
        .book-table {
            background-image: url(@("/images/SystemSitting/" + Model.SystemSetting.SystemSettingWelcomeNoteImageUrl3));
        }

    </style>
}




<div class="book-table ptb-100 bg-img" id="book">

    <div class="container">
        <div class="section-title text-center mb-50">
            <h2>book a table</h2>
            <p> Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim nostrud exercitation ullamco laboris nisi.</p>

        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="reserve-form">
                    <h3 class="reserv-title">Reservation Form</h3>
                    <!--Transaction Book Table-->
                    <form asp-action="book" asp-controller="Home">
                        <div class="reserve-form-top row g-3">
                            <div>
                                <label class="control-label"></label>
                                <input asp-for="TransactionBookTableModel.TransactionBookTableFullName" class="form-control" placeholder="Full name" />
                                <span asp-validation-for="TransactionBookTableModel.TransactionBookTableFullName" class="text-danger"></span>
                            </div>
                            <div>
                                <label class="control-label"></label>
                                <input asp-for="TransactionBookTableModel.TransactionBookTableEmail" class="form-control" placeholder="Email address" />
                                <span asp-validation-for="TransactionBookTableModel.TransactionBookTableEmail" class="text-danger"></span>
                            </div>
                            <div>
                                <label class="control-label"></label>
                                <input asp-for="TransactionBookTableModel.TransactionBookTableMobileNumber" class="form-control" placeholder="Mobile number" />
                                <span asp-validation-for="TransactionBookTableModel.TransactionBookTableMobileNumber" class="text-danger"></span>
                            </div>
                            <div class="col-6">
                                <input asp-for="TransactionBookTableModel.TransactionBookTableDate" class="form-control" />
                                <span asp-validation-for="TransactionBookTableModel.TransactionBookTableDate" class="text-danger"></span>
                            </div>
                            <div class="col-6">
                                <input asp-for="TransactionBookTableModel.TransactionBookTableTime" class="form-control" />
                                <span asp-validation-for="TransactionBookTableModel.TransactionBookTableTime" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="reserve-submit mt-40">
                            <button type="submit" value="Create"> submit </button>
                        </div>
                    </form>


                </div>
            </div>
            @if (Model.SystemSetting != null)
            {
                @if (Model.SystemSetting.SystemSettingWelcomeNoteImageUrl2 != "")
                {
                    <div class="col-lg-6">

                        <div class="book-img">
                            <img src="~/images/SystemSitting/@Model.SystemSetting.SystemSettingWelcomeNoteImageUrl2" alt="">
                        </div>

                    </div>
                }
            }
        </div>
    </div>
</div>


<div class="testimonial-area ptb-100 gray-bg">
    <div class="container">
        <div class="section-title text-center mb-50">
            <h2>what people say</h2>
            <p> Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim nostrud exercitation ullamco laboris nisi.</p>
        </div>
        <div class="row">
            @if (Model.CustomerList.Count != 0)
            {

                <div class="col-md-12">
                    <div class="testimonial-image-slider text-center">
                        @foreach (var item in Model.CustomerList)
                        {

                            <div class="single-testi-text">
                                <p>@item.CustomerDesc</p>
                            </div>
                        }
                    </div>
                    <div class="testimonial-text-slider text-center">
                        @foreach (var item in Model.CustomerList)
                        {
                            <div class="single-testi-img">
                                <img src="~/images/@item.CustomerImage" />
                                <h3>@item.CustomerName</h3>
                                <h5>@item.CustomerPosition</h5>
                            </div>
                        }

                    </div>
                </div>

            }
        </div>
    </div>
</div>

@if (Model.MasterOffer != null)
{
    <div class="offer-area gray-bg ptb-100 bg-img" style="background-image:url(/images/@Model.MasterOffer.MasterOfferImageUrl);">
        <div class="container">
            <div class="row">
                <div class="xl-auto col-xl-5 ms-auto col-lg-6 col-md-12">
                    <div class="offer-content">

                        <h5>@Model.MasterOffer.MasterOfferBreef</h5>
                        <h2>@Model.MasterOffer.MasterOfferTitle</h2>
                        <p>@Model.MasterOffer.MasterOfferDesc</p>
                        <div class="default-btn-style book-btn mt-35">
                            <a class="scroll-up" href="#book">Book Now</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}

@if (Model.MasterPartnerList.Count != 0)
{
    <div class="brand-logo-area ptb-100">
        <div class="container">
            <div class="brand-logo-active owl-carousel">
                @foreach (var item in Model.MasterPartnerList)
                {
                    <div class="single-brand-logo">
                        <img alt="@item.MasterPartnerName" src="~/images/@item.MasterPartnerLogoImageUrl">
                    </div>

                }
            </div>
        </div>
    </div>
}