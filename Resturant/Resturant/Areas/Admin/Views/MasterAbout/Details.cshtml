@model Resturant.ViewModels.MasterAboutModel

@{
    ViewData["Title"] = "Details";
}

<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <a class="breadcrumb-item" asp-action="Index" asp-controller="MasterAbout">Master Aboutr</a>
            <a class="breadcrumb-item active" asp-action="Details" asp-controller="MasterAbout">Details</a>

        </ol>
    </nav>
</div>

<div class="card">
    <div class="card-body">

        <dl class="mt-3">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MasterAboutTitle)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MasterAboutTitle)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MasterAboutBrief)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MasterAboutBrief)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MasterAboutDesc)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MasterAboutDesc)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MasterAboutUrl)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MasterAboutUrl)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MasterAboutImageUrl)
            </dt>
            <dd class="col-sm-10">
                <img src="~/images/@Model.MasterAboutImageUrl" style="max-width:65px" />
            </dd>
            <div class="text-end">
                <a asp-action="Index" class="btn btn-success">Back to List</a>

                <a asp-action="Edit" asp-route-id="@Model.MasterAboutId" class="btn btn-primary">Edit</a>
            </div>
        </dl>
    </div>
</div>

