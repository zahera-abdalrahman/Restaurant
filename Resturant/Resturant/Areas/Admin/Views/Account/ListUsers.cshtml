@model IEnumerable<Resturant.ViewModels.Register>

@{
    ViewData["Title"] = "ListUsers";
}

<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <a class="breadcrumb-item active" asp-action="ListUsers" asp-controller="Account">Users</a>
        </ol>
    </nav>
</div>
<p class=" text-end me-2">
    <a asp-action="Register" asp-controller="Account" class="btn btn-primary">Register</a>
</p>
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"></h5>
                  
                    <table class="table datatable table-hover">
                        <thead class="blue">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UserName)
                                </th>       
                               
                                <th class="text-center">
                                    Operations
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>

                                    <td class="align-middle text-center">
                                        <form method="post">
                                            <a asp-action="EditUser" asp-controller="Account" asp-route-id="@item.Id" class="fs-4 "><i class="ri-edit-line rem"></i></a>
                                            <a asp-action="UserDetails" asp-route-id="@item.Id" class="fs-4 "><i class="ri-file-list-2-line"></i></a>
                                            <a href="#" class="btnSelectRow fs-4  text-danger" data-bs-toggle="modal" data-bs-target="#verticalycentered" data-path="@Url.ActionLink("DeleteAccount","Account",new {id=item.Id})">
                                                <i class="ri-delete-bin-5-line"></i>
                                            </a>
                                        </form>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>
</section>


<div class="modal fade" id="verticalycentered" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are You Shure You Want To Delete This?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="btnClose" data-bs-dismiss="modal" aria-label="Close">Close</button>
                <input type="button" class="btn btn-danger" value="Delete" id="btnConfirmDelete">
            </div>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

<script>

    var idRowDelete = "";
    $(function () {
        $(".btnSelectRow").click(function () {
            idRowDelete = $(this).data("path");
        });


        $("#btnConfirmDelete").click(function () {
            window.location = idRowDelete;
            idRowDelete = "";
        });
        $("#btnClose").click(function () {

            idRowDelete = "";
        });

    })


</script>

