@model Resturant.ViewModels.MasterOfferModel

@{
    ViewData["Title"] = "Edit";
}

<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <a class="breadcrumb-item" asp-action="Index" asp-controller="MasterOffer">Master Offer</a>
            <a class="breadcrumb-item active" asp-action="Edit" asp-controller="MasterOffer">Edit</a>
        </ol>
    </nav>
</div>
<div class="card">
    <div class="card-body">
        <div class="col-md-12">
            <form asp-action="Edit" enctype="multipart/form-data" class="mt-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MasterOfferId" />
                <div class="row mb-3">
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="MasterOfferImageUrl" class="control-label"></label>
                            <input asp-for="File" type="file" class="form-control" />
                            <span asp-validation-for="MasterOfferImageUrl" class="text-danger"></span>
                            <input asp-for="MasterOfferImageUrl" type="hidden" class="form-control" />
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="MasterOfferTitle" class="control-label"></label>
                            <input asp-for="MasterOfferTitle" class="form-control" />
                            <span asp-validation-for="MasterOfferTitle" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="MasterOfferBreef" class="control-label"></label>
                            <textarea asp-for="MasterOfferBreef" class="form-control" maxlength="250"></textarea>
                            <span asp-validation-for="MasterOfferBreef" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="MasterOfferDesc" class="control-label"></label>
                            <textarea asp-for="MasterOfferDesc" class="form-control" maxlength="250"></textarea>
                            <span asp-validation-for="MasterOfferDesc" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group text-end">
                    <a asp-action="Index" class="btn btn-success">Back to List</a>

                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>

            </form>
        </div>

    </div>
</div>



