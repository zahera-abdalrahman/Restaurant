@model Resturant.ViewModels.MasterSliderModel

@{
    ViewData["Title"] = "Details";
}

<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <a class="breadcrumb-item" asp-action="Index" asp-controller="MasterSlider">Master Slider</a>
            <a class="breadcrumb-item active" asp-action="Details" asp-controller="MasterSlider">Details</a>
        </ol>
    </nav>
</div>

<div class="card">
    <div class="card-body">
        <dl class="mt-3">

            <dt class="col-sm-12">
                @Html.DisplayNameFor(model => model.MasterSliderTitle)
            </dt>
            <dd class="col-sm-12">
                @Html.DisplayFor(model => model.MasterSliderTitle)
            </dd>
            <dt class="col-sm-12">
                @Html.DisplayNameFor(model => model.MasterSliderBreef)
            </dt>
            <dd class="col-sm-12">
                @Html.DisplayFor(model => model.MasterSliderBreef)
            </dd>
            <dt class="col-sm-12">
                @Html.DisplayNameFor(model => model.MasterSliderDesc)
            </dt>
            <dd class="col-sm-12">
                @Html.DisplayFor(model => model.MasterSliderDesc)
            </dd>
            <dt class="col-sm-12">
                @Html.DisplayNameFor(model => model.MasterSliderUrl)
            </dt>
            <dd class="col-sm-12">
                <img src="~/images/@Model.MasterSliderUrl" style="max-width:65px" />
            </dd>
            <div class="text-end">
                <a asp-action="Index" class="btn btn-success">Back to List</a>

                <a asp-action="Edit" asp-route-id="@Model.MasterSliderId" class="btn btn-primary ">Edit</a>
            </div>
        </dl>
    </div>
</div>

