@model Resturant.ViewModels.CustomerModel
@{
    ViewData["Title"] = "Details";
}

<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <a class="breadcrumb-item" asp-action="Index" asp-controller="Customer">Customer</a>
            <a class="breadcrumb-item active" asp-action="Details" asp-controller="Customer">Details</a>
        </ol>
    </nav>
</div>

<div class="card">
    <div class="card-body">
        <dl class="mt-3">
            <dt class="col-sm-12">
                @Html.DisplayNameFor(model => model.CustomerDesc)
            </dt>
            <dd class="col-sm-12">
                @Html.DisplayFor(model => model.CustomerDesc)
            </dd>
            <dt class="col-sm-12">
                @Html.DisplayNameFor(model => model.CustomerName)
            </dt>
            <dd class="col-sm-12">
                @Html.DisplayFor(model => model.CustomerName)
            </dd>
            <dt class="col-sm-12">
                @Html.DisplayNameFor(model => model.CustomerPosition)
            </dt>
            <dd class="col-sm-12">
                @Html.DisplayFor(model => model.CustomerPosition)
            </dd>
            <dt class="col-sm-12">
                @Html.DisplayNameFor(model => model.CustomerImage)
            </dt>
            <dd class="col-sm-10">
                <img src="~/images/@Model.CustomerImage" style="max-width:65px" />
            </dd>
            <div class="text-end">
                <a asp-action="Index" class="btn btn-success">Back to List</a>

                <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-primary">Edit</a> 
            </div>

        </dl>
    </div>
</div>
